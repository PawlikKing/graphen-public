{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",         
    "rootDir": "src",
    "outDir": "dist",         
    "moduleResolution": "bundler", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
